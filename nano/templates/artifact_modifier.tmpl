<h3>Artifact Modifier</h3>

{{if data.modifier.cur_artifact}}
<div class="item">
	<div class="itemLabel">
		Artifact
	</div>
	<div class="itemContent">
		<span class="good">{{:data.modifier.artifact.artifact_id}}</span>		
	</div>
</div>

<div class="item">
	<div class="itemLabel">
		Anomaly Charges
	</div>
	<div class="itemContent">
		{{:data.modifier.stored_charges}}	
	</div>
</div>

{{if data.modifier.isolated_effect}}
<div class="item">
	<div class="itemLabel">
		Pulse Energy Signals
	</div>
	<div class="itemContent">
		{{:helper.link("Positive", null, {'switchType': '1'}, !data.modifier.modify_target && !data.modifier.modify_parameter ? null : disabled)}}
		{{:helper.link("Negative", null, {'switchType': '0'}, !data.modifier.modify_target && data.modifier.modify_parameter ? null : disabled)}}
		<br> <br>
		{{:helper.link("Kappa", "radiation", {'modifyEffect': '1'}, data.modifier.modify_target ? disabled : null)}} 		<br>
		{{:helper.link("Beta", "radiation", {'modifyEffect': '2'}), data.modifier.modify_target ? disabled : null}}			<br>
		{{:helper.link("Gamma", "radiation", {'modifyEffect': '3'}, data.modifier.modify_target ? disabled : null)}}			<br>
		{{:helper.link("Sigma", "radiation", {'modifyEffect': '4'}, data.modifier.modify_target ? disabled : null)}}			<br>
		{{:helper.link("Delta", "radiation", {'modifyEffect': '5'}, data.modifier.modify_target ? disabled : null)}}			<br>
		{{:helper.link("Alpha", "radiation", {'modifyEffect': '6'}, data.modifier.modify_target ? disabled : null)}}			<br>
		{{:helper.link("Epsilon", "radiation", {'modifyEffect': '7', '}, data.modifier.modify_target ? disabled : null)}}	<br>
		{{:helper.link("Omega", "radiation", {'modifyEffect': '8'}, data.modifier.modify_target ? disabled : null)}}			<br>
	</div>
</div>

<div class="item">
	<div class="itemLabel">
		Progress
	</div>
	<div class="itemContent">
		{{:helper.displayBar(data.modifier.progress-1, 0, 100)}} <br>
	</div>
</div>

<div class="item">
	<div class="itemContent">
		{{:helper.link("Release Effect", null, {'releaseEffect': '1'})}}	<br>
	</div>
</div>

{{else}}

<div class="item">
	<div class="itemLabel">
		Isolated Energy Signatures
	</div>
	<div class="itemContent">
		{{:helper.link("Dominant Energy Signature", null, {'selectEffect': '1'})}} <br>
		{{if data.modifier.cur_artifact.secondary_effect}}
		{{:helper.link("Lesser Energy Signature", null, {'selectEffect': '2'})}} <br>
		{{/if}} 
	</div>
</div>

{{/if}}


<div class="item">
	<div class="itemContent">
		{{:helper.link("Release Artifact", null, {'releaseArtifact': '1'})}}	<br>
	</div>
</div>

{{else}}

<div class="item">
	<div class="itemLabel">
		Artifact
	</div>
	<div class="itemContent">
		<span class="bad">NOT FOUND</span>	
		<br>
		{{:helper.link("Locate Artifact", null, {'findArtifact': '1'}, data.modifier.owned_scanner ? null : disabled)}}
	</div>
</div>
		
{{/if}}

